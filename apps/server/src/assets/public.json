{
  "openapi": "3.1.0",
  "info": {
    "license": {
      "name": "GNU General Public License v3.0",
      "url": "https://github.com/kibotrel/osu-tournament-manager/blob/main/LICENSE"
    },
    "summary": "This document is defining the API contracts for the osu! tournament manager webapp.\n",
    "title": "osu! tournament manager API",
    "version": "0.0.0"
  },
  "servers": [
    {
      "url": "https://{environment}.osu-tournament-manager.app/{version}",
      "variables": {
        "environment": {
          "default": "dev.api",
          "enum": [
            "api",
            "dev.api",
            "staging.api"
          ]
        },
        "version": {
          "default": "v1",
          "enum": [
            "v1"
          ]
        }
      }
    }
  ],
  "tags": [
    {
      "name": "Echo",
      "description": "Example echo operations"
    }
  ],
  "paths": {
    "/echos": {
      "get": {
        "security": [],
        "description": "Echo back a message",
        "tags": [
          "Echo"
        ],
        "summary": "Echo back a message",
        "operationId": "echo",
        "parameters": [
          {
            "name": "message",
            "description": "Message to echo",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, world!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "Invalid message"
                    },
                    "title": {
                      "type": "string",
                      "example": "Bad Request"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}