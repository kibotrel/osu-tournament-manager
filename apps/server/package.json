{
  "dependencies": {
    "@packages/shared": "workspace:*",
    "connect-redis": "7.1.1",
    "drizzle-orm": "0.31.0",
    "express": "4.19.2",
    "express-openapi-validator": "5.1.6",
    "express-session": "1.18.0",
    "pg": "8.11.5",
    "redis": "4.6.14",
    "swagger-themes": "1.4.3",
    "swagger-ui-express": "5.0.0"
  },
  "devDependencies": {
    "@redocly/cli": "1.12.2",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/pg": "8.11.6",
    "@types/swagger-ui-express": "4.1.6",
    "drizzle-kit": "0.22.8",
    "tsx": "4.16.0"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "name": "@apps/server",
  "private": true,
  "scripts": {
    "db:migrate": "drizzle-kit migrate",
    "db:migration:create": "drizzle-kit generate && tsx --env-file=.env ./src/scripts/renameMigrationFileScript.ts",
    "db:migration:drop": "drizzle-kit drop",
    "dev": "nodemon --config nodemon-server.json src/server.ts",
    "dev:specs": "nodemon --config nodemon-specs.json",
    "healthcheck": "tsx --env-file=.env ./src/scripts/healthCheckScript.ts",
    "specs:bundle:internal": "redocly bundle internal --output src/assets/internal.openapi.json",
    "specs:bundle:public": "redocly bundle public --output src/assets/public.openapi.json"
  },
  "type": "module"
}
