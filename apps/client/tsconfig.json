{
  "compilerOptions": {
    "allowJs": true,
    "declarationMap": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "sourceMap": true,
    "types": ["vite/client"]
  },
  "exclude": ["**/node_modules/**", "**/*/dist"],
  "extends": "../tsconfig.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "vite-env.d.ts",
    "./src/assets/styles/tailwind.theme.js"
  ]
}
